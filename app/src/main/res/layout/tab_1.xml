<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_curtain"
        android:background="#ff4f32"
        android:text="ผ้าม่าน"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/manmonBt"
        android:layout_below="@+id/bt_curtain"
        android:text="ม่านม้วน"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mooliBt"
        android:layout_below="@+id/manmonBt"
        android:text="มู่ลี่ไม้"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mooliAlu"
        android:layout_below="@+id/mooliBt"
        android:text="มู่ลี่อลู"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/manbupsangBt"
        android:layout_below="@+id/mooliAlu"
        android:text="ม่านปรับแสง"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chag"
        android:layout_below="@+id/manbupsangBt"
        android:text="ฉากกันห้อง"
        />


</RelativeLayout>